
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:background="#F9FBFC"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="end">

    <RelativeLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        >
        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:padding="@dimen/_3sdp"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_toRightOf="@+id/imgBack"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/header_logo"
                android:layout_toLeftOf="@+id/imgMenu"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                />

            <ImageView
                android:id="@+id/imgMenu"
                android:layout_width="@dimen/_25sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_menu_black_48px"
                />

        </RelativeLayout>
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:popupTheme="@style/AppTheme"
            android:minHeight="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            >

            <RelativeLayout
                android:id="@+id/mainHead"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/header_logo"
                    />
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/userView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4F5761"
            android:padding="@dimen/_5sdp"
            android:gravity="center_vertical|right"
            android:layout_below="@+id/top"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pavel sarwar"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="#fff"
                    />

                <TextView
                    android:layout_width="1dp"
                    android:background="#fff"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    />

                <TextView
                    android:id="@+id/tvLogOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LogOut"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="#fff"
                    android:layout_marginRight="@dimen/_10sdp"
                    />

            </LinearLayout>

        </RelativeLayout>


        <FrameLayout
            android:id="@+id/containerView"
            android:layout_width="match_parent"
            android:layout_below="@+id/userView"
            android:visibility="visible"
            android:layout_height="match_parent"></FrameLayout>


    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/shitstuff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9FBFC"
        android:layout_marginTop="@dimen/_45sdp"
        android:layout_gravity="right"
        >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F9FBFC"
                android:paddingTop="@dimen/_30sdp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tvProfile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:text="Profile"
                    android:textColor="#ffF"
                    android:background="#4F5761"
                    android:paddingRight="@dimen/_15sdp"
                    android:textDirection="rtl"
                    android:gravity="center"
                    />


            </LinearLayout>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>





