<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:padding="@dimen/_3sdp"
        android:background="#929292"
        android:layout_height="wrap_content">




        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_30sdp"
            android:layout_centerInParent="true"
            android:layout_height="@dimen/_30sdp"
            android:visibility="visible"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_chevron_left_white_24px"
            android:layout_marginLeft="@dimen/_5sdp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Exception"
            android:textColor="#fff"
            android:textSize="@dimen/_15sdp"
            />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/etInDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="@dimen/_15sdp"
            android:textColor="#000"
            android:text=""
            android:focusable="false"
            android:hint="Clock In Date:"
            android:inputType="textCapSentences"
            android:padding="@dimen/_8sdp"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp">

        <EditText
            android:id="@+id/etClockIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:hint="Clock In Time:"
            android:text=""
            android:focusable="false"
            android:inputType="textCapSentences"
            android:padding="@dimen/_8sdp"
            android:textColor="#000"
            android:textSize="@dimen/_15sdp" />

    </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_25sdp"
            android:visibility="gone"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etClockOutLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="@dimen/_15sdp"
            android:textColor="#000"
            android:hint="Clock Out Location:"
            android:text=""
            android:focusable="true"

            android:inputType="textCapSentences"
            android:padding="@dimen/_8sdp"
            />

    </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clock In Location:"
                android:visibility="gone"
                android:textSize="@dimen/_13sdp"
                />

            <Spinner
                android:id="@+id/spnCheckInLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_height="wrap_content"
            >

            <EditText
                android:id="@+id/etOutDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="@dimen/_15sdp"
                android:textColor="#000"
                android:text=""
                android:focusable="false"
                android:hint="Clock Out Date:"
                android:inputType="textCapSentences"
                android:padding="@dimen/_8sdp"
                />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etClockOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="@dimen/_15sdp"
            android:textColor="#000"
            android:hint="Clock Out Time:"
            android:text=""
            android:focusable="false"
            android:inputType="textCapSentences"
            android:padding="@dimen/_8sdp"
            />

    </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etClockInLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="@dimen/_15sdp"
                android:textColor="#000"
                android:hint="Clock In Location:"
                android:text=""
                android:focusable="true"

                android:inputType="textCapSentences"
                android:padding="@dimen/_8sdp"
                />


        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clock Out Location:"
                android:visibility="gone"
                android:textSize="@dimen/_13sdp"
                />
            <Spinner
                android:id="@+id/spnCheckOutLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="@dimen/_15sdp"
            android:textColor="#000"
            android:hint="Comments:"
            android:text=""
            android:focusable="true"
            android:inputType="textCapSentences"
            android:padding="@dimen/_8sdp"
            />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_30sdp"
        >
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:textSize="@dimen/_20sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingLeft="@dimen/_35sdp"
            android:paddingRight="@dimen/_35sdp"
            android:text="SUBMIT"
            android:textColor="#4F5761"
            android:gravity="center"
            android:layout_height="wrap_content" />

    </LinearLayout>
    </LinearLayout>
</LinearLayout>